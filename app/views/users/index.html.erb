<p id="notice"><%= notice %></p>

<h1>Vélivole</h1>

<table>
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Surnom</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.alias %></td>
        <td><%= user.amount %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Paye sa Bière', { :controller => "operations", :action => "new", :userid => user.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un Vélivole', new_user_path %>
